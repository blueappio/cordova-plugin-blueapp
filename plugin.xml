<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-blueapp" version="1.0.5" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>cordova-plugin-blueapp</name>
  <description>Cordova BlueApp Plugin</description>

  <!-- <asset src="www/blueappio.js" target="js/blueappio.js"/> -->

  <js-module src="www/blueappio.js" name="blueappio">
    <clobbers target="blueappio" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="IOBlueApp">
        <param name="android-package" value="com.vensi.plugin.IOBlueApp"/>
      </feature>
    </config-file>

    <source-file src="src/android/IOBlueApp.java" target-dir="src/com/vensi/plugin/"/>    
  </platform>

  <platform name="ios">
    
    <config-file target="config.xml" parent="/widget">
      <feature name="IOBlueApp">
        <param name="ios-package" value="IOBlueApp" />
      </feature>
    </config-file>

    <header-file src="src/ios/IOBlueApp.h" />
    <source-file src="src/ios/IOBlueApp.m" />
  </platform>

</plugin>